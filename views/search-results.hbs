<h1>Podcast Search Results</h1>


<div id="podcast-search-results">
  {{#each allResults}}
  <div>
    <h2><a href="/details/{{this.id}}">{{this.title}}</a></h2>
    <img class="podcastImg" src="{{this.imageURL}}">
    <form action="/podcasts/{{this.id}}/addtofavorite" method="post">
      <button>Add to favorites</button>
    </form>

  </div>
  {{/each}}
</div>
