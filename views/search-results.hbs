<h1>Podcast Search Results</h1>


<div id="podcast-search-results">
  {{#each allResults}}
  <div class="one-podcast">
    <h2 class="podcast-title"><a href="{{this.origin}}/details/{{this.id}}">{{this.title}}</a></h2>
    <div><img class="podcastImg" src="{{this.imageURL}}"></div>
    <form action="/{{this.origin}}/{{this.id}}/addtofavorite" method="post">
      <button>Add to favorites</button>
    </form>
  </div>
  {{/each}}
</div>
