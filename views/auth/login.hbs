{{!-- <h2>Sign In</h2> --}}
<div id="signup">
<form action="/login" method="POST">
<h3>Login</h3>
  <div class="form-group">
      <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" class="form-control"/>
    <small id="emailHelp" class="form-text text-muted"></small>
  </div>
  <div class="form-group">
    <label for="input-password">Password</label>
    <input type="password" name="password" class="form-control" id="input-password" placeholder="********"/>
  </div>
  <button type="submit" class="btn btn-sm btn-outline-secondary">Login</button>
   {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>
</div>
